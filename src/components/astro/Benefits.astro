// Benefits component - fully static, no JavaScript needed
const benefits = [
  {
    icon: 'home',
    title: 'Gemütliches Ambiente',
    description: 'Entspannen Sie in angenehmer Salon-Atmosphäre. Ein Ort zum Wohlfühlen und Abschalten.',
  },
  {
    icon: 'clock',
    title: 'Ohne Wartezeiten',
    description: 'Feste Termine nur für Sie. Keine Wartezeiten - pünktlich und zuverlässig.',
  },
  {
    icon: 'heart',
    title: 'Persönliche Betreuung',
    description: 'Individuelle Behandlung in ruhiger Umgebung. Volle Aufmerksamkeit nur für Sie.',
  },
  {
    icon: 'shield',
    title: 'Höchste Hygiene',
    description: 'Sterilisierte Instrumente und professionelle Arbeitsmaterialien nach medizinischen Standards.',
  },
  {
    icon: 'calendar',
    title: 'Flexible Termine',
    description: 'Terminvereinbarung nach Ihren Wünschen - auch abends oder am Wochenende möglich.',
  },
  {
    icon: 'star',
    title: 'Erstklassige Qualität',
    description: 'Professionelle Behandlung mit modernsten Methoden und hochwertigen Produkten.',
  },
];

