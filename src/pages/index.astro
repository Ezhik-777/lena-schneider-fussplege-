---
import Layout from '../layouts/Layout.astro';
import Header from '../components/astro/Header.astro';
import Hero from '../components/astro/Hero.astro';
import About from '../components/astro/About.astro';
import Services from '../components/astro/Services.astro';
import Benefits from '../components/astro/Benefits.astro';
import ServiceArea from '../components/astro/ServiceArea.astro';
import Footer from '../components/astro/Footer.astro';
import StructuredData from '../components/astro/StructuredData.astro';
---

<Layout>
  <StructuredData />
  <Header />
  <main id="main-content">
    <Hero />
    <About />
    <Services />
    <Benefits />
    <ServiceArea />

    <!-- Booking Section Placeholder - Will be replaced with React island -->
    <section id="booking" class="bg-gray-50">
      <div class="container px-5 sm:px-6">
        <div class="text-center max-w-2xl mx-auto">
          <div class="inline-block mb-4">
            <span class="text-primary-600 font-bold text-sm uppercase tracking-wider bg-white px-4 py-2 rounded-full shadow-sm">
              Termin vereinbaren
            </span>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Buchen Sie Ihren Termin
          </h2>
          <p class="text-lg text-gray-700 mb-8">
            Rufen Sie uns an oder schreiben Sie uns eine Nachricht.
          </p>
          <div class="space-y-4">
            <a
              href="tel:+4917634237368"
              class="block bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-bold text-lg transition-all shadow-lg hover:shadow-xl"
            >
              Jetzt anrufen: +49 176 34237368
            </a>
            <a
              href="mailto:info@fusspflege-lena-schneider.de"
              class="block bg-white hover:bg-gray-50 text-primary-600 border-2 border-primary-600 px-8 py-4 rounded-lg font-bold text-lg transition-all"
            >
              E-Mail senden
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
